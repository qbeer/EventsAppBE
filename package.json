{
  "name": "events-app-backend",
  "version": "1.0.0",
  "engines": {
    "node": "9.11.x",
    "npm": "6.0.x"
  },
  "description": "Google calendar integration in backend. Modern REST API with DB connection using TypeORM support. The whole project will use TypeScript.",
  "main": "",
  "scripts": {
    "start:debug": "CONNECTION_TYPE=default ts-node --inspect ./src/server.ts",
    "start": "CONNECTION_TYPE=default ts-node ./src/server.ts",
    "tsc": "tsc",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/qbeer/EventsAppBE.git"
  },
  "author": "Alex Olar",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/qbeer/EventsAppBE/issues"
  },
  "homepage": "https://github.com/qbeer/EventsAppBE#readme",
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "exec": "CONNECTION_TYPE=default ts-node ./src/server.ts",
    "signal": "SIGHUP",
    "delay": "500"
  },
  "dependencies": {
    "@types/express": "^4.16.0",
    "@types/mysql": "^2.15.5",
    "@types/node": "^10.5.3",
    "body-parser": "^1.18.3",
    "es6-shim": "^0.35.3",
    "express": "^4.16.3",
    "fs": "0.0.1-security",
    "googleapis": "^32.0.0",
    "mysql": "^2.16.0",
    "readline": "^1.3.0",
    "reflect-metadata": "^0.1.12",
    "ts-node": "^7.0.0",
    "typeorm": "^0.2.7",
    "typescript": "^2.9.2",
    "util": "^0.11.0"
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "jest": "^23.4.1",
    "nodemon": "^1.18.3",
    "sqlite3": "^4.0.2",
    "ts-jest": "^23.0.1"
  }
}
